            </StackPanel>
            <Button Content="Кнопка раз" Height="40" DockPanel.Dock="Top" />
            <Button Height="40" Visibility="Hidden"/>
        </DockPanel>
        <Frame x:Name="FormRole" Grid.Column="1" Grid.RowSpan="3" Grid.ColumnSpan="3" NavigationUIVisibility="Hidden"/>
    </Grid>
</Window>
